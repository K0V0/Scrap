<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" tools:actionBarNavMode="tabs" android:background="#000000">
    <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="4dp" android:background="#222222"
            android:layout_marginLeft="4dp" android:layout_marginTop="4dp" android:layout_marginStart="4dp"
            android:layout_marginRight="4dp" android:layout_marginEnd="4dp" android:layout_marginBottom="4dp"
            android:minHeight="72dp">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="0" android:gravity="center"
                android:minHeight="64dp">
            <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/coverArt" android:layout_weight="0" android:maxHeight="32dp"
                    android:maxWidth="32dp" android:layout_marginRight="4dp" android:minWidth="32dp"
                    android:minHeight="32dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nazovKapely" android:layout_weight="0.1"
                    android:textColor="#FFC107" android:textSize="18sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1">
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/styl" android:layout_weight="1000"
                        android:textColor="#888888"/>
                <ImageButton
                        android:src="@mipmap/sdcard_foreground"
                        android:layout_width="32dp"
                        android:layout_height="32dp" android:id="@+id/savedOnDisk" android:layout_weight="1"
                        android:background="@mipmap/sdcard_background"
                        android:scaleType="fitCenter" android:cropToPadding="false" android:adjustViewBounds="false"
                        android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>