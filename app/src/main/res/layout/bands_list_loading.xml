<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="64dp" tools:actionBarNavMode="tabs" android:background="#000000">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:text="@string/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/loadingText" android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFC107"/>
    </LinearLayout>
</RelativeLayout>